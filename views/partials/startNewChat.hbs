<div class="modal fade" id="startnewchat" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="requests">
            <div class="title">
                <h1>Start new chat</h1>
                <button type="button" class="btn" data-dismiss="modal" aria-label="Close"><i
                        class="material-icons">close</i></button>
            </div>
            <div class="content layer">
                <form id="startNewChatForm">
                    <label for="participant" style="color: black;font-size:larger;"><b>Recipient:</b></label>
                    <div style="color:#bdbac2;" class="language">
                        <select class="custom-select" id="country" required>
                            <option selected>Select Recipient</option>
                            {{#friends}}
                            <option id="selectedUser" value="{{id}}">
                                {{name}}
                            </option>
                            {{/friends}}
                        </select>
                    </div>
                    {{#user}}
                    <input id="user2_Id" value="{{id}}" hidden>
                    {{/user}}
                    <br>
                    <button id="newChatButton" class="btn button w-100">Start New Chat</button>
                </form>
            </div>
        </div>
    </div>
</div>


