<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="requests">
            <div class="title">
                <h1>Add your friends</h1>
                <button type="button" class="btn" data-dismiss="modal" aria-label="Close"><i
                        class="material-icons">close</i></button>
            </div>
            <div class="content">
                <form>
                    <label style="color:black;font-weight:bolder;font-size:larger;">Username:</label>
                    <input type="text" class="form-control" id="userInput" placeholder="Add recipient..." required>
                    <br>
                    {{#contacts}}
                    <a href="/friend-profile/{{id}}" style="cursor: pointer;" id="friends">
                        <div class="form-group" style="overflow-y:scroll;">
                            <input type="text" class="form-control">
                            <div class="user">

                                <img class="avatar-sm" src="{{image}}" alt="avatar">
                                <h5>{{name}}</h5>
                                <button class="btn"><i class="material-icons">close</i></button>
                            </div>
                        </div>
                    </a>
                    {{/contacts}}
                </form>
            </div>
        </div>
    </div>
</div>